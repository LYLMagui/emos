/* 取景框和图片展示框 */
.camera,
.image {
  width: 100%;
  height: 400px;
}
/* 按钮 */
.operate-container {
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}
.operate-container .btn {
  width: 40%;
  margin: 0;
}
.operate-container .btn:first-child {
  margin-right: 30rpx;
}
/* 提示文字 */
.notice-container {
  padding: 40rpx 60rpx;
}
.notice-container .notice {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  display: flex;
  margin-bottom: 15rpx;
}
.notice-container .desc {
  display: block;
  font-size: 32rpx;
  color: #999;
  line-height: 1.6;
}

