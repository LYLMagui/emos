.page {
  padding: 35rpx;
}
/* 第一部分 用户概要信息 */
.user-info {
  margin-top: 50rpx;
  padding-bottom: 20rpx;
}
.user-info .border-outer {
  background-color: #fbe3e1;
  width: 320rpx;
  height: 320rpx;
  border-radius: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 40rpx;
}
.user-info .border-outer .border-inner {
  background-color: #f5b8b4;
  width: 280rpx;
  height: 280rpx;
  border-radius: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-info .border-outer .border-inner .photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 120rpx;
  display: block;
  border: solid 20rpx #ec7872;
}
.user-info .summary {
  display: flex;
  justify-content: space-between;
  background-color: #f5f5f5;
  color: #333;
  padding: 15rpx 0;
}
.user-info .summary view {
  text-align: center;
  flex-grow: 1;
  flex-shrink: 1;
}
.user-info .summary view:nth-child(2) {
  border-left: solid 1rpx #e0e0e0;
  border-right: solid 1rpx #e0e0e0;
}
.user-info .summary view .title {
  display: block;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.user-info .summary view .value {
  display: block;
  color: #333;
  font-size: 32rpx;
}
/* 第二部分 用户信息栏目和系统管理栏目 */
.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #3474ff;
  border-left: solid 15rpx #3474ff;
  padding-left: 20rpx;
  margin: 35rpx 0;
}

